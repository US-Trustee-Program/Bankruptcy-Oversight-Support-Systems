{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "playwright": false,
  "rules": {
    "enumMembers": "off"
  },
  "workspaces": {
    ".": {
      "entry": ["eslint.config.mjs"],
      "ignore": [
        "**/node_modules/**",
        "**/dist/**",
        "**/build/**",
        "**/coverage/**",
        "**/.cache/**"
      ]
    },
    "ops": {
      "entry": [
        "function-apps/**/*.function.ts",
        "function-apps/dataflows/dataflows.ts",
        "express/server.ts",
        "**/*.test.ts"
      ],
      "project": ["**/*.ts"],
      "ignore": [
        "**/mongo-init/**",
        "**/dist/**",
        "**/coverage/**"
      ],
      "ignoreFiles": [
        "function-apps/api/index.ts",
        "lib/testing/mock-gateways/mock-oauth2-constants.ts"
      ]
    },
    "backend": {
      "entry": [
        "function-apps/**/*.function.ts",
        "function-apps/dataflows/dataflows.ts",
        "express/server.ts",
        "**/*.test.ts"
      ],
      "project": ["**/*.ts"],
      "ignore": [
        "**/node_modules/**",
        "**/dist/**",
        "**/coverage/**"
      ],
      "ignoreFiles": [
        "function-apps/api/index.ts",
        "lib/testing/mock-gateways/mock-oauth2-constants.ts"
      ]
    },
    "user-interface": {
      "entry": [
        "src/index.tsx",
        "src/initialize.ts",
        "vite.config.mts",
        "vitest.config.mts",
        "test/**/*.ts",
        "src/**/*.test.ts",
        "src/**/*.test.tsx"
      ],
      "project": ["src/**/*.{ts,tsx}", "test/**/*.ts", "!playwright.config.ts"],
      "ignore": [
        "**/node_modules/**",
        "**/build/**",
        "**/coverage/**"
      ],
      "ignoreFiles": ["playwright.config.ts"]
    },
    "common": {
      "entry": ["src/index.ts", "src/**/*.test.ts"],
      "project": ["src/**/*.ts"],
      "ignore": [
        "**/node_modules/**",
        "**/dist/**",
        "**/coverage/**"
      ]
    },
    "test/bdd": {
      "entry": [
        "vitest.config.ts",
        "features/**/*.spec.tsx",
        "helpers/**/*.ts",
        "helpers/**/*.tsx",
        "fixtures/**/*.ts"
      ],
      "project": ["**/*.{ts,tsx}"],
      "ignore": [
        "**/node_modules/**",
        "**/coverage/**"
      ]
    },
    "test/e2e": {
      "entry": ["**/*.ts"],
      "project": ["**/*.ts"],
      "ignore": ["**/node_modules/**"]
    },
    "dev-tools": {
      "entry": ["**/*.ts"],
      "project": ["**/*.ts"],
      "ignore": ["**/node_modules/**", "**/data/**"]
    }
  },
  "ignoreBinaries": [
    "pushd",
    "popd",
    "playwright",
    "date",
    "dot",
    "dev-tools/.venv-docs/bin/python",
    "dev-tools/.venv-docs/bin/python3",
    "python3"
  ],
  "ignoreDependencies": [
    "@azure/cosmos",
    "@azure/identity",
    "@azure/keyvault-secrets",
    "@uswds/uswds",
    "buffer",
    "ts-node",
    "@eslint/js",
    "@typescript-eslint/eslint-plugin",
    "@typescript-eslint/parser",
    "eslint-config-prettier",
    "eslint-plugin-import",
    "eslint-plugin-jsx-a11y",
    "eslint-plugin-n",
    "eslint-plugin-prettier",
    "eslint-plugin-promise",
    "eslint-plugin-react",
    "eslint-plugin-react-hooks",
    "eslint-plugin-testing-library",
    "@vitest/eslint-plugin",
    "prettier",
    "typescript-eslint",
    "cams",
    "esbuild",
    "@vitest/coverage-v8",
    "@launchdarkly/node-server-sdk",
    "launchdarkly-react-client-sdk",
    "@okta/okta-auth-js",
    "@launchdarkly/node-server-sdk",
    "launchdarkly-react-client-sdk",
    "react-router-dom",
    "common",
    "globals"
  ]
}
