{
  "paths": {
    "/case-assignments/{caseId}": {
      "get": {
        "tags": [
          "Case Assignments"
        ],
        "summary": "Get case assignments by case ID",
        "description": "Retrieves a list of assignments for a specific case",
        "parameters": [
          {
            "name": "caseId",
            "in": "path",
            "required": true,
            "schema": {
              "$ref": "../schemas/cases.json#/CaseId"
            },
            "description": "Case ID in the format XXX-XX-XXXXX"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "../schemas/assignments.json#/CaseAssignment"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid case ID format",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "../schemas/cams-error.json#/CamsError"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "../schemas/cams-error.json#/CamsError"
                }
              }
            }
          },
          "404": {
            "description": "Case not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "../schemas/cams-error.json#/CamsError"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "../schemas/cams-error.json#/CamsError"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Case Assignments"
        ],
        "summary": "Create trial attorney assignments",
        "description": "Assigns trial attorneys to a case with a specific role",
        "parameters": [
          {
            "name": "caseId",
            "in": "path",
            "required": true,
            "schema": {
              "$ref": "../schemas/cases.json#/CaseId"
            },
            "description": "Case ID in the format XXX-XX-XXXXX"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../schemas/assignments.json#/StaffAssignmentAction"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Assignments created successfully"
          },
          "400": {
            "description": "Invalid request parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "../schemas/cams-error.json#/CamsError"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "../schemas/cams-error.json#/CamsError"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "../schemas/cams-error.json#/CamsError"
                }
              }
            }
          }
        }
      }
    }
  }
}
