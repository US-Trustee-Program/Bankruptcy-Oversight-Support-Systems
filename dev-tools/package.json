{
  "name": "dev-tools",
  "version": "1.0.0",
  "description": "Custom tools used to aid development.",
  "scripts": {
    "clean": "rm -rf ./node_modules",
    "delete-all": "tsx --env-file=.env cosmos-records/index.ts",
    "delete-assignments": "tsx --env-file=.env cosmos-records/delete-assignments.ts",
    "delete-orders": "tsx --env-file=.env cosmos-records/delete-orders.ts",
    "generate-api-key": "tsx --env-file=.env api-keys/generate-key.ts",
    "sync-orders": "tsx --env-file=.env cosmos-records/sync-orders.ts",
    "reload-orders": "npm run delete-orders; npm run sync-orders",
    "test-data:sql": "mkdir -p data; tsx --env-file=.env test-data/index.ts sql > data/test-data.sql",
    "test-data:json": "mkdir -p data; tsx --env-file=.env test-data/index.ts json > data/test-data.json",
    "biome-lint": "cd ../ && npx biome lint ./dev-tools --config-path ./dev-tools/biome.json",
    "biome-lint:write": "cd ../ && npx biome lint --write ./dev-tools --config-path ./dev-tools/biome.json",
    "biome-format": "cd ../ && npx biome format ./dev-tools --config-path ./dev-tools/biome.json",
    "biome-format:write": "cd ../ && npx biome format --write ./dev-tools --config-path ./dev-tools/biome.json",
    "biome-check": "cd ../ && npx biome check ./dev-tools --config-path ./dev-tools/biome.json",
    "biome-check:write": "cd ../ && npx biome check --write ./dev-tools --config-path ./dev-tools/biome.json"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@azure/cosmos": "^4.2.0",
    "@azure/identity": "^4.5.0",
    "@faker-js/faker": "^9.3.0",
    "@types/node": "^22.10.2",
    "dotenv": "^16.4.7",
    "tsx": "^4.19.2"
  },
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "1.9.4"
  }
}
