{
  "name": "common",
  "version": "1.0.0",
  "description": "CAMS common package",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf ./node_modules && rm -rf ./coverage & rm tsconfig.tsbuildinfo",
    "build": "npx tsc",
    "test": "jest",
    "coverage": "jest --coverage",
    "coverage:ci": "jest --coverage",
    "biome-lint": "npx biome lint .",
    "biome-lint:write": "npx biome lint --write .",
    "biome-format": "npx biome format .",
    "biome-format:write": "npx biome format --write .",
    "biome-check": "npx biome check .",
    "biome-check:write": "npx biome check --write .",
    "dependency-cruiser-graphical": "current_time=$(date +'%Y-%m-%d_%H%M') && npx depcruise --output-type dot --do-not-follow '^node_modules($|/)' src | dot -T svg > ../docs/architecture/dependency-cruiser/common/dependency-graph_common_${current_time}.svg",
    "dependency-cruiser-ci": "npx depcruise --output-type err-long src"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@faker-js/faker": "^9.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "dependency-cruiser": "^16.8.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "buffer": "^6.0.3"
  }
}
