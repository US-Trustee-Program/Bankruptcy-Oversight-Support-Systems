{
  "name": "common",
  "version": "1.0.0",
  "description": "CAMS common package",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./dist & rm -rf ./node_modules & rm tsconfig.tsbuildinfo",
    "build": "npx tsc",
    "test": "jest -c jest.config.js",
    "coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write './**/*.{js,ts,css,md,json}' --config ./.prettierrc",
    "dependency-cruiser-graphical": "current_time=$(date +'%Y-%m-%d_%H%M') && npx depcruise --output-type dot --do-not-follow '^node_modules($|/)' src | dot -T svg > ../../docs/architecture/dependency-cruiser/functions/dependency-graph_common_${current_time}.svg",
    "dependency-cruiser-ci": "npx depcruise --output-type err-long "
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.6",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
