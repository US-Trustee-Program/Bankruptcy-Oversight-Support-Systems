{
  "name": "cams",
  "version": "0.1.0",
  "private": true,
  "license": "CC0 v1.0",
  "description": "Bankruptcy Oversight Support System - Graphical Frontend User Interface",
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@trussworks/react-uswds": "^4.2.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.2.3",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "dotenv": "^16.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.8.2",
    "redux": "^4.2.1",
    "typescript": "^4.9.5",
    "web-vitals": "^3.3.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "dependency-cruiser": "^12.11.3",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "fetch-mock": "^9.11.0",
    "pa11y-ci": "^3.0.1",
    "prettier": "^2.8.8",
    "react-scripts": "^5.0.1",
    "sass": "^1.58.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "overrides": {
    "nth-check": "2.0.1",
    "webpack": "^5.78.0"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/index.tsx",
      "/reportWebVitals.ts",
      "/configuration/apiConfiguration.ts",
      "http.humble.ts"
    ]
  },
  "scripts": {
    "start": "test -e ./.env && sh .env; react-scripts start",
    "start:pa11y": "export REACT_APP_PA11Y=true && react-scripts start",
    "build": "react-scripts build",
    "test": "export REACT_APP_PA11Y=true && react-scripts test --testMatch '**/*.test.{js,jsx,ts,tsx}' --coverage --watchAll=false",
    "test:watch": "npm run test -- --watchAll=true",
    "coverage": "npm run test -- --coverage",
    "eject": "react-scripts eject",
    "lint": "eslint .",
    "lint:fix": "eslint --fix",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
    "pa11y:ci": "pa11y-ci",
    "preinstall": "npx npm-force-resolutions",
    "dependency-cruiser-graphical": "current_time=$(date +'%Y-%m-%d_%H:%M') && npx depcruise --output-type dot --do-not-follow '^node_modules($|/)' public src tests | dot -T svg > ../architecture/dependency-cruiser/gui/dependency-graph_${current_time}.svg",
    "dependency-cruiser-ci": "npx depcruise --output-type err-long public src tests"
  }
}
