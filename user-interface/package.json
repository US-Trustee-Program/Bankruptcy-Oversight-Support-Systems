{
  "name": "cams",
  "version": "0.1.0",
  "private": true,
  "license": "CC0 v1.0",
  "description": "Bankruptcy Oversight Support System - Graphical Frontend User Interface",
  "scripts": {
    "build": "npm run envToConfig && tsc --noEmit && vite build",
    "build-common": "pushd ../common && npm ci && npm run build && popd",
    "clean": "rm -rf build && rm -rf node_modules && rm -rf ./coverage",
    "coverage": "export CAMS_USE_FAKE_API=true && vitest run --coverage",
    "coverage:ci": "export CAMS_USE_FAKE_API=true && vitest run --coverage",
    "dependency-cruiser-graphical": "current_time=$(date +'%Y-%m-%d_%H%M') && npx depcruise --output-type dot --do-not-follow '^node_modules($|/)' public src | dot -T svg > ../docs/architecture/dependency-cruiser/user-interface/dependency-graph_${current_time}.svg",
    "dependency-cruiser:ci": "npx depcruise --output-type err-long public src",
    "envToConfig": "node ./envToConfig.js",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "serve": "npm run envToConfig && npm run build && vite preview --port 3000 --strict-port",
    "slotConfig": "node ./envToConfig.js -f configuration-${SLOT_NAME:-staging}.json",
    "start": "npm run envToConfig && vite",
    "start:a11y": "export CAMS_USE_FAKE_API=true && export CAMS_LOGIN_PROVIDER=none && npm run envToConfig && tsc --noEmit && vite build && vite preview --port 3000 --strict-port",
    "test": "export CAMS_USE_FAKE_API=true && vitest run",
    "test:a11y": "playwright test --reporter=list,html",
    "test:a11y:clean": "rm -rf test-results & rm -rf playwright-report",
    "test:a11y:ui": "playwright test --ui",
    "test:watch": "export CAMS_USE_FAKE_API=true && vitest watch",
    "typecheck": "tsc -b --noEmit",
    "typecheck:ci": "npm run typecheck"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": []
  },
  "dependencies": {
    "@microsoft/applicationinsights-react-js": "19.3.8",
    "@microsoft/applicationinsights-web": "3.3.11",
    "@okta/okta-auth-js": "7.14.1",
    "@okta/okta-react": "6.10.0",
    "@tiptap/extension-bold": "3.18.0",
    "@tiptap/extension-document": "3.18.0",
    "@tiptap/extension-italic": "3.18.0",
    "@tiptap/extension-list": "3.18.0",
    "@tiptap/extension-paragraph": "3.18.0",
    "@tiptap/extension-text": "3.18.0",
    "@tiptap/extension-underline": "3.18.0",
    "@tiptap/extensions": "3.18.0",
    "@tiptap/react": "3.18.0",
    "@types/jsdom": "21.1.7",
    "@types/node": "24.10.10",
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "@uswds/uswds": "3.13.0",
    "dompurify": "3.3.1",
    "dotenv": "17.2.3",
    "launchdarkly-react-client-sdk": "3.9.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-router-dom": "7.13.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "4.11.0",
    "@eslint/js": "10.0.0",
    "@playwright/test": "1.58.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.2",
    "@testing-library/user-event": "14.6.1",
    "@vitejs/plugin-react": "5.1.3",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/eslint-plugin": "1.6.6",
    "babel-plugin-react-compiler": "1.0.0",
    "dependency-cruiser": "17.3.7",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.5.5",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-testing-library": "7.15.4",
    "jsdom": "28.0.0",
    "prettier": "3.8.1",
    "react-router": "7.13.0",
    "sass-embedded": "1.97.3",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0",
    "vite": "7.3.1",
    "vite-plugin-env-compatible": "2.0.1",
    "vite-plugin-static-copy": "3.2.0",
    "vite-plugin-svgr": "4.5.0",
    "vite-tsconfig-paths": "6.0.5",
    "vitest": "3.2.4"
  }
}
