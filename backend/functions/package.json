{
  "name": "node",
  "version": "1.0.0",
  "description": "",
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/mssql": "^9.1.1",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "azure-function-context-mock": "^0.0.7",
    "dependency-cruiser": "^13.1.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@azure/cosmos": "3.17.3",
    "@azure/functions": "^3.0.0",
    "@azure/identity": "^3.2.2",
    "@azure/keyvault-secrets": "^4.7.0",
    "applicationinsights": "^2.7.0",
    "dotenv": "^16.0.3",
    "jest": "^29.5.0",
    "mssql": "^10.0.1",
    "pine": "^1.1.1"
  },
  "overrides": {
    "@opentelemetry/instrumentation": "0.41.2"
  },
  "scripts": {
    "clean": "rm -rf ./dist & rm -rf ./node_modules",
    "build": "tsc --project tsconfig.build.json",
    "watch": "tsc --project tsconfig.build.json -w",
    "prestart": "npm run build",
    "start": "func start --typescript",
    "start:dev": "nodemon --esm src/server.ts",
    "test": "DATABASE_MOCK='true' jest -c jest.config.js",
    "test:integration": "DATABASE_MOCK='true' jest -c jest.integration.config.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix",
    "format": "prettier --write './**/*.{js,ts,css,md,json}' --config ./.prettierrc",
    "pack": "mkdir -p /tmp/build && zip -q -r /tmp/build/$OUT.zip . --exclude @.funcignore --exclude .funcignore && mv /tmp/build/$OUT.zip .",
    "coverage": "DATABASE_MOCK='true' jest --coverage",
    "dependency-cruiser-graphical": "current_time=$(date +'%Y-%m-%d_%H%M') && npx depcruise --output-type dot --do-not-follow '^node_modules($|/)' attorneys case-assignments cases healthcheck lib | dot -T svg > ../../docs/architecture/dependency-cruiser/functions/dependency-graph_${current_time}.svg",
    "dependency-cruiser-ci": "npx depcruise --output-type err-long attorneys case-assignments cases healthcheck lib "
  }
}
