{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./build",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./adapters/types"],
    "types": [
      "@types/mocha",
      "@types/chai",
      "node"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "test/unit/**/*"
  ],
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "files": true
  }
}
