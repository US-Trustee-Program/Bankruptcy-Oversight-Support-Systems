{
  "name": "BOSS API",
  "version": "0.1.0",
  "description": "Bankruptcy Oversight Support System - Application Programming Interface",
  "main": "src/server.ts",
  "type": "module",
  "author": "",
  "license": "CC0 v1.0",
  "dependencies": {
    "@azure/identity": "^3.1.3",
    "body-parser": "^1.20.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mssql": "^9.1.1",
    "tedious": "^15.1.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.3.4",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.8",
    "@types/mocha": "^10.0.1",
    "@types/mssql": "^8.1.2",
    "@types/sinon": "^10.0.13",
    "@types/supertest": "^2.0.12",
    "c8": "^7.13.0",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "sinon": "^15.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2"
  },
  "scripts": {
    "build": "rm -rf build && tsc",
    "format": "prettier --write src/",
    "start": "npm run build && cd build && node server.js",
    "start:local": "npm run build && cp .env build/ && cd build && node server.js",
    "start:dev": "nodemon --esm src/server.ts",
    "test": "DATABASE_MOCK='true' mocha --exit -r ts-node/register tests/unit/**/*.test.ts",
    "test:coverage": "npm run build && c8 --reporter=text --require ts-node/register --require source-map-support/register npm run test"
  }
}
