{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "America/New_York",
  "stabilityDays": 7,
  "prConcurrentLimit": 10,
  "branchConcurrentLimit": 5,
  "minimumReleaseAge": "7 days",
  "separateMajorMinor": true,
  "separateMinorPatch": false,
  "rangeStrategy": "pin",
  "semanticCommits": "disabled",
  "packageRules": [
    {
      "description": "Block updates for pinned packages",
      "matchPackageNames": ["@types/mssql"],
      "enabled": false
    },
    {
      "description": "Lock mssql to major version 10",
      "matchPackageNames": ["mssql"],
      "allowedVersions": "10.x"
    },
    {
      "description": "Lock pa11y-ci to major version 3",
      "matchPackageNames": ["pa11y-ci"],
      "allowedVersions": "3.x"
    },
    {
      "description": "Lock @faker-js/faker to major version 9",
      "matchPackageNames": ["@faker-js/faker"],
      "allowedVersions": "9.x"
    },
    {
      "description": "Require 30-day wait for x.0.0 major versions",
      "matchUpdateTypes": ["major"],
      "matchNewValue": "/\\.0\\.0$/",
      "minimumReleaseAge": "30 days"
    },
    {
      "description": "Group non-major updates into a single PR",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "description": "Create separate PRs for each major update",
      "matchUpdateTypes": ["major"],
      "groupName": null
    }
  ],
  "lockFileMaintenance": {
    "enabled": false
  },
  "vulnerabilityAlerts": {
    "enabled": true,
    "schedule": ["at any time"]
  }
}
