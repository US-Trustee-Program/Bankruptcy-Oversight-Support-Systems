{
  "enabled": true,
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "timezone": "America/New_York",
  "prConcurrentLimit": 10,
  "branchConcurrentLimit": 5,
  "minimumReleaseAge": "14 days",
  "separateMajorMinor": true,
  "separateMinorPatch": false,
  "rangeStrategy": "pin",
  "semanticCommits": "disabled",
  "constraints": {
    "node": "22.17.1"
  },
  "packageRules": [
    {
      "description": "Group React packages that must have matching versions",
      "matchPackageNames": ["react", "react-dom"],
      "groupName": "react"
    },
    {
      "description": "Group Vite and related build tools for consistent versions across workspaces",
      "matchPackageNames": ["vite", "@vitejs/plugin-react"],
      "groupName": "vite"
    },
    {
      "description": "Group Application Insights packages",
      "matchPackageNames": ["applicationinsights", "@microsoft/applicationinsights-react-js", "@microsoft/applicationinsights-web"],
      "groupName": "applicationinsights"
    },
    {
      "description": "Automatically pin dependency ranges to exact versions",
      "matchUpdateTypes": ["pin"],
      "enabled": true,
      "groupName": "Pin dependencies to exact versions",
      "groupSlug": "pin-dependencies"
    },
    {
      "description": "Lock @faker-js/faker to major version 9",
      "matchPackageNames": ["@faker-js/faker"],
      "allowedVersions": "9.x"
    },
    {
      "description": "Disable Node.js version updates - must match Azure DevOps runners",
      "matchManagers": ["nvm"],
      "enabled": false
    },
    {
      "description": "First-party GitHub Actions with digest pinning and 14-day wait",
      "matchManagers": ["github-actions"],
      "pinDigests": true,
      "minimumReleaseAge": "14 days",
      "groupName": "GitHub first-party actions",
      "matchPackageNames": ["/^actions//", "/^github//"]
    },
    {
      "description": "Third-party GitHub Actions with digest pinning, 30-day wait, and separate PRs",
      "matchManagers": ["github-actions"],
      "pinDigests": true,
      "minimumReleaseAge": "30 days",
      "groupName": null,
      "automerge": false,
      "matchPackageNames": ["!/^actions//", "!/^github//"]
    },
    {
      "description": "Require 30-day wait for x.0.0 major versions",
      "matchUpdateTypes": ["major"],
      "matchNewValue": "/\\.0\\.0$/",
      "minimumReleaseAge": "30 days"
    },
    {
      "description": "Group non-major updates into a single PR",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "description": "Create separate PRs for each major update",
      "matchUpdateTypes": ["major"],
      "groupName": null
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5am on wednesday"]
  },
  "vulnerabilityAlerts": {
    "enabled": true,
    "schedule": ["at any time"]
  }
}
